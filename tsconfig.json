{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "Node",
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "pretty": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "src/**/*"
   ],
   "exclude": [
     "dist",
     "typings",
     "node_modules",
     "**/*.spec.ts"
   ],
   "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\n"
  }
}
