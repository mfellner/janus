{
  "name": "janus",
  "version": "0.1.0",
  "description": "JSON document repository.",
  "main": "dist/index.js",
  "repository": "https://github.com/mfellner/janus.git",
  "author": "Maximilian Fellner <max.fellner@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dist": "tsc -p .",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "npm run lint && JANUS_LOG_LEVEL=warn jest --coverage",
    "start": "npm run dist && concurrently \"tsc -w\" \"nodemon --watch dist -e js --delay 1 bin/janus\"",
    "neo4j": "docker build -t neo4j databases/neo4j && docker run -d -p 7474:7474 -p 7687:7687 -e NEO4J_AUTH=neo4j/password --name neo4j neo4j"
  },
  "devDependencies": {
    "@types/express": "4.0.35",
    "@types/jest": "18.1.1",
    "@types/koa": "2.0.37",
    "@types/koa-bodyparser": "3.0.23",
    "@types/koa-compose": "3.2.0",
    "@types/koa-router": "7.0.21",
    "@types/nconf": "0.0.33",
    "@types/node": "7.0.5",
    "@types/supertest": "2.0.0",
    "@types/uuid": "2.0.29",
    "@types/winston": "2.2.0",
    "concurrently": "3.1.0",
    "jest": "18.1.0",
    "nodemon": "1.11.0",
    "source-map-support": "0.4.11",
    "supertest": "3.0.0",
    "ts-jest": "18.0.3",
    "tslint": "4.4.2",
    "typescript": "2.1.5",
    "typings": "2.1.0"
  },
  "dependencies": {
    "express-winston": "2.1.3",
    "koa": "2.0.0",
    "koa-bodyparser": "3.2.0",
    "koa-compose": "3.2.1",
    "koa-router": "7.1.0",
    "nconf": "0.8.4",
    "neo4j-driver": "1.1.0",
    "uuid": "3.0.1",
    "winston": "2.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "coverageReporters": [
      "json",
      "lcov",
      "html",
      "text"
    ]
  }
}
